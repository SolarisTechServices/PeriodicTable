<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.PeriodicTrendFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="30sp"
        android:layout_marginLeft="30sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Size2"
            android:textSize="24sp"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0px" android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Group"
                android:layout_marginRight="10sp"
                android:id="@+id/size_grp" />
            <Button
                android:layout_width="0px"
                android:layout_weight="0.5"
                android:layout_marginLeft="10sp"
                android:layout_height="wrap_content"
                android:text="Period"
                android:id="@+id/size_prd"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ionization Enthalpy"
            android:textSize="24sp"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Group"
                android:layout_marginRight="10sp"
                android:layout_weight="0.5"
                android:id="@+id/ie_grp"/>
            <Button
                android:layout_width="0px"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Period"
                android:layout_marginLeft="10sp"
                android:id="@+id/ie_prd"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Melting Point"
            android:textSize="24sp"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Group"
                android:layout_marginRight="10sp"
                android:layout_weight="0.5"
                android:id="@+id/mp_grp"/>
            <Button
                android:layout_width="0px"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Period"
                android:layout_marginLeft="10sp"
                android:id="@+id/mp_prd"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Boiling Point"
            android:textSize="24sp"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Group"
                android:layout_marginRight="10sp"
                android:layout_weight="0.5"
                android:id="@+id/bp_grp"/>
            <Button
                android:layout_width="0px"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Period"
                android:layout_marginLeft="10sp"
                android:id="@+id/bp_prd"/>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>